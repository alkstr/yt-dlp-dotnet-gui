<Window
    x:Class="YTDLP.Dotnet.GUI.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:assets="using:YTDLP.Dotnet.GUI.Assets"
    xmlns:icons="using:FluentIcons.Avalonia"
    xmlns:tabs="using:YTDLP.Dotnet.GUI.Tabs"
    Title="YTDLP.Dotnet.GUI"
    Width="{StaticResource WindowWidth}"
    Height="{StaticResource WindowHeight}"
    MinWidth="{StaticResource WindowWidth}"
    MinHeight="{StaticResource WindowHeight}"
    d:DesignHeight="{DynamicResource WindowHeight}"
    d:DesignWidth="{DynamicResource WindowWidth}"
    Icon="/Assets/app.ico"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Assets/WindowResources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="TabControl /template/ WrapPanel">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Window.Styles>

    <TabControl>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <icons:SymbolIcon
                        Width="32"
                        Height="32"
                        FontSize="32"
                        Symbol="ArrowDownload" />
                    <TextBlock Text="{x:Static assets:Resources.Downloader_Tab_Header}" />
                </StackPanel>
            </TabItem.Header>
            <tabs:DownloaderTab />
        </TabItem>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <icons:SymbolIcon
                        Width="32"
                        Height="32"
                        FontSize="32"
                        Symbol="VideoClipWand" />
                    <TextBlock Text="{x:Static assets:Resources.Editor_Tab_Header}" />
                </StackPanel>
            </TabItem.Header>
            <tabs:EditorTab />
        </TabItem>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <icons:SymbolIcon
                        Width="32"
                        Height="32"
                        FontSize="32"
                        Symbol="Settings" />
                    <TextBlock Text="{x:Static assets:Resources.Settings_Tab_Header}" />
                </StackPanel>
            </TabItem.Header>
            <tabs:SettingsTab />
        </TabItem>

    </TabControl>

</Window>